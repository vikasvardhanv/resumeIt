{
  "manifest_version": 3,
  "name": "ResumeCraft",
  "version": "0.1.0",
  "description": "Automatically craft your resume to job postings and generate project ideas.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity"
  ],
  "oauth2": {
    "client_id": "157963579583-dud4n2ur9g5479fc4r8vbg9ou2n5onlv.apps.googleusercontent.com",
    "scopes": ["profile", "email"]
  },
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "*://*.glassdoor.com/*",
    "*://*.workdayjobs.com/*",
    "*://*.greenhouse.io/*",
    "*://*.lever.co/*",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ResumeCraft"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/*",
        "*://*.workdayjobs.com/*",
        "*://*.greenhouse.io/*",
        "*://*.lever.co/*",
        "*://*/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
